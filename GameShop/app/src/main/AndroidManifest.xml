<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gameshop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Game Shop"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GameShop">
        <activity
            android:name=".test"
            android:label="@string/title_activity_test"
            android:theme="@style/Theme.GameShop.NoActionBar"></activity>
        <activity android:name=".PCActivity" />
        <activity android:name=".XBOXActivity" />
        <activity android:name=".PSActivity" />
        <activity
            android:name=".MainActivity"
            android:label="Main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShopActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
    </application>

</manifest>